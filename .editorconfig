# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true

[**.py]
indent_style = space
indent_size = 4
max_line_length = 79
trim_trailing_whitespace = true

[**.xml]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

[**.{yaml,yml}]
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

[**.md]
trim_trailing_whitespace = false
max_line_length = 120

[**.rst]
trim_trailing_whitespace = true
max_line_length = 100
